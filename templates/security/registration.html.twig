{% extends 'base.html.twig' %}

{% block body %}


<div class="container">
<div class="row d-flex justify-content-center">
<h1>Inscription sur le site</h1>
</div></div>
<div class="container">
<div class="row d-flex justify-content-center">
<div class='col-8'>
{{ form_start(form)}}

{{form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'class': 'form-control','placeholder': 'Nom d\'utilisateur ...'}} ) }}
