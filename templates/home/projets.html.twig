{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}



<section class="articles">

 {% for project in projects %}

 <article>
     <h2>{{ project.title }}</h2>
     <div class="content">
         <img src="{{ project.image }}" alt="">
         {{ project.Description | raw }}
         <a href="#" class="btn btn-primary">{{project.Github}}</a>
         <a href="#" class="btn btn-primary">{{project.Weblink}}</a>
         <a href="{{ path('projet_show', {'id': project.id})}}" class="btn btn-primary">Lire la suite</a>
     </div>
 </article>

 {% endfor %}
 
</section>
{% endblock %}